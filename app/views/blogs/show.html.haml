
#main_container
  .container#main_content
    .card-panel.black-text.thin_300
      %p#notice= notice
      
      %p
        %b Title:
        = @blog.title
      %p
        %b Body:
        = simple_format @blog.body
      %p
        %b Image:
        = image_tag @blog.image,class: "responsive-img"
      %p
        %b User:
        = @blog.user.name
      
      = link_to 'Edit', edit_blog_path(@blog)
      \|
      = link_to 'Back', blogs_path
