= form_for @blog do |f|
  - if @blog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blog.errors.count, "error")} prohibited this blog from being saved:"
      %ul
        - @blog.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body,class: "materialize-textarea"
  .field
    = f.label :image
    = f.text_field :image
    = f.text_field :user_id, value: @current_user.id
  .actions
    = f.submit 'Save',class: "btn btn-large blue"
